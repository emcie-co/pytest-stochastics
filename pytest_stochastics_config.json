            "strategy_tests": [
                {
                    "strategy": "disable",
                    "tests": [
                        "tests/test_func_tests.py::test_fail"
                    ]
                },
                {
                    "strategy": "coinflip",
                    "tests": [
                        "tests/test_func_tests.py::test_pass_once_1",
